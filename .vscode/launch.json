   "version": "0.2.0",
   "configurations": [
      {
         "name": "(Windows) Launch",
         "type": "cppvsdbg",
         "request": "launch",
         "program": "${workspaceFolder}/build/Debug/bin/InteractiveDemo.exe",
         "args": [],
         "stopAtEntry": false,
         "cwd": "${fileDirname}",
         "environment": []
      },
      {
         "type": "gdb",
         "request": "launch",
         "name": "NativeDebug Launch",
         "target": "./build/Debug/bin/Example_HelloWindow",
         "cwd": "${workspaceRoot}",
         "valuesFormatting": "parseText"
      },
      {
         "name": "(gdb) cpptools Launch",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceFolder}/build/Debug/bin/TestBed",
         "args": [],
         "stopAtEntry": false,
         "cwd": "${fileDirname}",
         "environment": [],
         "externalConsole": false,
         "MIMode": "gdb",
         "setupCommands": [
            {
               "description": "Enable pretty-printing for gdb",
               "text": "-enable-pretty-printing",
               "ignoreFailures": true
            }
         ]
      }
   ]
}